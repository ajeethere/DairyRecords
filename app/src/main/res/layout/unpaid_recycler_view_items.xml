<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/layout_design"
    android:layout_margin="@dimen/dim_5dp"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="serial no."
        android:layout_marginLeft="@dimen/dim_10dp"
        android:background="@drawable/smal_laout_design"
        android:padding="@dimen/dim_10dp"
        android:id="@+id/unpaid_seroial_no."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginRight="@dimen/dim_20dp"
            android:id="@+id/unpaid_purchaser_name"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="contact no."
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginRight="@dimen/dim_20dp"
            android:id="@+id/unpaid_contact_no."/>
    </LinearLayout>
</LinearLayout>