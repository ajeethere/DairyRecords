<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/layout_design"
    android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="serial no."
            android:layout_marginLeft="@dimen/dim_10dp"
            android:background="@drawable/smal_laout_design"
            android:padding="@dimen/dim_10dp"
            android:id="@+id/welcome_seroial_no."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:gravity="center"
            android:id="@+id/welcome_purchaser_name"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="contact no."
        android:gravity="center"
        android:id="@+id/welcome_contact_no."/>
    </LinearLayout>

</LinearLayout>